@model GYM_Management_System.Models.ClientServiceList

@{
    ViewBag.Title = "ClientServiceListUpdate";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}

<h2>Client ServiceList Update</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>ClientServiceList</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" id="ClientServiceListId" name="ClientServiceListId" value="@Model.ClientServiceListId" />
        <input type="hidden" id="ClientId" name="ClientId" value="@Model.ClientId"/>
  
        <div class="form-group">
            @Html.Label("Client Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @*@Html.DropDownList("ClientId", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.EditorFor(model => model.Client.ClietName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Service Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("ServiceId", null,"Select One Item", htmlAttributes: new { @class = "form-control" })
                @*@Html.EditorFor(model => model.Servicess.ServiceName, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.ServiceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Service_Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Service_Status)
                    @Html.ValidationMessageFor(model => model.Service_Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-6 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ClientServiceList")
</div>

