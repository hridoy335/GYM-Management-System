@model GYM_Management_System.Models.Schedule

@{
    ViewBag.Title = "ScheduleRegistration";
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
}

<h4>Schedule Registration</h4>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <h6 class="alert-warning">@ViewBag.error</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Schedule Time", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("ScheduleTimeid", null,"Select Item", htmlAttributes : new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.ScheduleTimeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Client Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("ClientId", null, "Select Item", htmlAttributes: new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Employee Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("EmployeeId",null, "Select Item", htmlAttributes:new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-6 col-md-5">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

