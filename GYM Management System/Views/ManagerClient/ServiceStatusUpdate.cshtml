@model GYM_Management_System.Models.ClientServiceList

@{
    ViewBag.Title = "ServiceStatusUpdate";
    Layout = "~/Views/Shared/_Manager_Layout.cshtml";
}

<h2>Service Status Update</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" id="ClientServiceListId" name="ClientServiceListId" value="@Model.ClientServiceListId" />
        <input type="hidden" id="ClientId" name="ClientId" value="@Model.ClientId">
        <input type="hidden" id="ServiceId" name="ServiceId" value="@Model.ServiceId">

        <div class="form-group">
            @Html.Label("Service Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Service_Status)
                    @Html.ValidationMessageFor(model => model.Service_Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ClientServiceList")
</div>
