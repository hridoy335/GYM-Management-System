<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -GYM Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GYM Management", "Index", "ClientSiteClient", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav bottom-right">
                    <li>@Html.ActionLink("Home", "Index", "ClientSiteClient")</li>
                    <li>@Html.ActionLink("Client Information", "ClientInfo", "ClientSiteClient")</li>
                    <li>@Html.ActionLink("Schedule Information", "ScheduleInfo", "ClientSiteClient")</li>
                    <li>@Html.ActionLink("Food Plan", "FoodPlan", "ClientSiteClient")</li>
                    <li>@Html.ActionLink("Attendence Information", "AttendenceInfo", "ClientSiteClient")</li>
                    <li>@Html.ActionLink("About", "About", "ClientSiteClient")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "ClientSiteClient")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
